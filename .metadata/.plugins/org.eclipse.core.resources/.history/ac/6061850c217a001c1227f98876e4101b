package fundamentos;

public class NotaçãoPonto {

	public static void main(String[] args) {

		String s = "Bom dia X";
		s = s.replace("X", "senhora");
		s = s.toUpperCase();
		s = s.concat("!!!");

		System.out.println(s);

		String f = "a lindo";
		f = f.replace("a", "Karina");
		System.out.println(f);
		
		String y ="Bom dia Karina";
		y = y.replace("Karina", "Vida");
		System.out.println(y);

	}
}