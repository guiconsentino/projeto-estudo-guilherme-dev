package oo.composicao;

public class Carro {

	Motor motor = new Motor();

	void acelerar() {
		if (motor.fatorInjecao < 3) {
			System.out.println(motor.giros() " Giros");
			motor.fatorInjecao += 0.4;
		} else {
			System.out.println("raaandandandandan " + motor.giros() + " Giros");

		}
	}

	void frear() {
		if (motor.fatorInjecao > 0.4) {
			motor.fatorInjecao -= 0.4;
		} else {
			System.out.println("carro morreu");
		}
	}

	void ligar() {
		motor.ligado = true;
	}

	void desligar() {
		motor.ligado = false;
	}

	boolean estaLigado() {
		return motor.ligado;
	}
}
