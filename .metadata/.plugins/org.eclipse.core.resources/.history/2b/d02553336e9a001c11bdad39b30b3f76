package arrays.ExerciciosNet;

import java.util.Arrays;
import java.util.Scanner;

public class Exercicio1C {

	public static void main(String[] args) {

		Scanner entrada = new Scanner(System.in);
		System.out.println("Digite quantos produtos quer: ");
		int qntProdutos = entrada.nextInt();

		int produtos[] = new int[qntProdutos];
		
		int qntProdutos1 = 1;
		for(int p = 0; p < qntProdutos; p++) {
			qntProdutos1 += qntProdutos;
		}
		
		System.out.println(qntProdutos1);
		
		
	}
}
