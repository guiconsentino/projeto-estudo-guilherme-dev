package fundamentos;

public class NotaçãoPonto {

	public static void main(String[] args) {

		String s = "Bom dia X";
		s = s.replace("X", "senhora");
		s = s.toUpperCase();
		s = s.concat("!!!");

		System.out.println(s);

		String x = "Leo".toUpperCase();
		x = x.replace("Leo", "karina");
		System.out.println(x);

	}
}